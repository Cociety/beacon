<li class="py-4" data-controller="scroll-into-view">
  <div class="flex space-x-3">
    <%= render 'customer/avatar', customer: comment.customer %>
    <div class="flex-1 space-y-1">
      <div class="flex items-center justify-between">
        <h3 class="text-xs text-gray-700"><%= comment.by.name %></h3>
        <p class="text-xs text-gray-700"><%= time_ago_in_words comment.created_at %></p>
      </div>
      <div class="flex justify-between items-start max-w-full">
        <p class="text-sm font-medium max-w-sm break-words"><%= urls_to_hrefs(comment.text).html_safe %></p>
        <div class="flex-shrink-0">
          <%= render 'comments/comment/actions', comment: comment %>
        </div>
      </div>
    </div>
  </div>
</li>
