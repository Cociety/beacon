<%= content_tag :li,
  draggable: true,
  ondragstart: 'DaD.dragStartHandler(event)',
  ondragover: 'DaD.dragOverHandler(event)',
  ondrop: 'DaD.dropHandler(event)',
  'data-id': goal.id,
  id: dom_id(goal),
  class: goal.state do -%>
  <span class="node node-<%= goal.state %>">
    <span class="text">
      <p>
        <span aria-hidden='true'></span>
        <%= goal.name %>
      </p>
    </span>
  </span>
  <ul>
    <%= render goal.children unless goal.children.empty? -%>
  </ul>
<%- end -%>