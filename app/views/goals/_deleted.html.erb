<li role="listitem" class="max-w-full">
  <div class="grid grid-cols-12 p-4 overflow-hidden bg-white dark:bg-gray-700 items-center rounded shadow-sm">
    <div class="col-span-7 min-w-0 flex-1 flex items-center">
      <div class="shrink-0">
        <%= render 'customer/avatar', size: :lg %>
      </div>
      <div class="min-w-0 flex-1 px-4 flex flex-col">
        <p class="text-sm font-medium text-black dark:text-white truncate max-w-xs"><%= deleted.name %></p>
      </div>
    </div>
    <div class="col-span-5 justify-self-end">
      <%= form_with url: goals_restore_path(deleted), method: :put do |f| %>
        <%= f.button type: :submit, class: 'btn secondary' do %>
          <%= t('.restore') %>
        <% end %>
      <% end %>
    </div>
  </div>
</li>
