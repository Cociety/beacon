<% if customer_signed_in? %>
  <%= tag.h1 "Hi #{Current.customer.name}" %>
  <%= render 'customer/avatar' %>
  <%= form_with url: sign_out_url, method: :delete do |f| %>
    <%= f.button type: :submit, data: {turbo: false}, class: 'btn secondary' do %>
      <%= t('auth.sign_out') %>
    <% end %>
  <% end %>
<% else %>
  <%= tag.h1 do -%>
    <%= link_to sign_in_url, class: 'btn primary' do %>
      <%= t 'auth.sign_in' %>
    <% end %>
  <%- end -%>
<% end %>