<div id="quick-view-<%= goal.id %>" class="transition-opacity fixed rounded-md w-96 border hidden opacity-0 bg-gray-100 shadow-md overflow-hidden">
  <div class="bg-white p-2 border-b border-gray-200 w-full">
    <h3 class="text-lg leading-6 font-medium text-gray-900 truncate">
      <%= goal.name %>
    </h3>
  </div>
  <div class="flex flex-col">
    <div class="p-2">
      <span class="text-sm">
        <%= t '.progress', remaining: goal.remaining, duration: goal.duration %>
      </span>
      <%= render 'components/progress', percent: goal.percent %>
    </div>
  </div>
</div>