<h1>
  <% if customer_signed_in? %>
    <%= "Hi #{current_customer.first_name} #{current_customer.last_name}" %>
    <%= link_to sign_out_url, method: :delete do %>
      <%= t 'auth.sign_out' %>
    <% end %>
    <div class="w-full">
      <%= content_tag :div,
        id: 'content',
        class: 'w-full h-full',
        'data-goal': render(partial: 'goals/goal', formats: [:json], locals: { goal: @goals.first}) do -%>
        <svg id="tree">
          <g transform="translate(0, 45)">
            <g class="links"></g>
            <g class="nodes"></g>
          </g>
        </svg>
      <%- end -%>
    </div>
  <% else %>
    <%= link_to sign_in_url do %>
      <%= t 'auth.sign_in' %>
    <% end %>
  <% end %>
</h1>
